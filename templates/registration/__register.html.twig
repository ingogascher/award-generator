{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    <h1>Register</h1>

<form name="registration_form" method="post">
        <div class="form-group">
            <label for="registration_form_email" class="required">E-Mail</label>
            <input type="text" class="form-control" id="registration_form_email" name="registration_form[email]" required="required" maxlength="180" placeholder="example@domain.com" />
        </div>
        <div class="form-group">
            <label for="registration_form_plainPassword" class="required">Passwort</label>
            <input type="password" class="form-control" id="registration_form_plainPassword" name="registration_form[plainPassword]" required="required" autocomplete="new-password" />
        </div>
        <div class="form-check">
            <label for="registration_form_agreeTerms" class="form-check-label required">Agree terms</label>
            <input type="checkbox" class="form-check-input" id="registration_form_agreeTerms" name="registration_form[agreeTerms]" required="required" value="1" />
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
</form>


{% endblock %}
